CC=g++
CFLAGS=-std=c++03 -pedantic -Wall -Wextra -Werror -g -c
CFILE=*.cc

all: httpio

httpio: main.o socket.o
	$(CC) main.o socket.o -o httpio

main.o: main.cc
	$(CC) $(CFLAGS) main.cc -o main.o

socket.o: c10m_socket.cc c10m_socket.h
	$(CC) $(CFLAGS) c10m_socket.cc -o socket.o

clean:
	rm *.o httpio

style:
	cppcheck --enable=all $(CFILE)

